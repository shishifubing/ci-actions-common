{
  "categories": [
    {
      "title": "## BREAKING CHANGES",
      "labels": [
        "break"
      ]
    },
    {
      "title": "## Features",
      "labels": [
        "feat"
      ]
    },
    {
      "title": "## Bug Fixes",
      "labels": [
        "fix"
      ]
    },
    {
      "title": "## Documentation changes",
      "labels": [
        "docs"
      ]
    }
  ],
  "sort": {
    "order": "ASC",
    "on_property": "title"
  },
  "ignore_labels": [
      "ignore",
      "chore"
  ],
  "template": "${{CHANGELOG}}\n\n## Other changes\n\n<details>\n<summary>Show</summary>\n\n${{UNCATEGORIZED}}\n\n</details>\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in [#${{NUMBER}}](${{URL}})",
  "empty_template": "- no noteworthy changes",
  "label_extractor": [
    {
      "pattern": "([^\\(]+)\\(.+\\): .+",
      "on_property": "title",
      "target": "$1"
    }
  ],
  "transformers": [
    {
      "pattern": "([^\\(]+)\\(?([^\\)]+)?\\)?: (.+)",
      "target": "- **$2**: $3"
    }
  ]
}
