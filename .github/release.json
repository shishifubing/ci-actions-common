{
  "categories": [
    {
      "title": "## Breaking Change",
      "labels": [
        "break"
      ]
    },
    {
      "title": "## Feature",
      "labels": [
        "feat"
      ]
    },
    {
      "title": "## Bug Fix",
      "labels": [
        "fix"
      ]
    },
    {
      "title": "## Documentation",
      "labels": [
        "docs"
      ]
    }
  ],
  "sort": {
    "order": "ASC",
    "on_property": "title"
  },
  "ignore_labels": [
      "ignore",
      "chore"
  ],
  "template": "${{CHANGELOG}}\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in [#${{NUMBER}}](${{URL}})",
  "empty_template": "- no noteworthy changes",
  "label_extractor": [
    {
      "pattern": "([^\\(]+)\\(.+\\): .+",
      "on_property": "title",
      "target": "$1"
    }
  ],
  "transformers": [
    {
      "pattern": "([^\\(]+)\\(?([^\\)]+)?\\)?: (.+)",
      "target": "- **$2**: $3"
    }
  ]
}
